{% macro initial_cluster() -%}
{% for host in groups[ETCD_PEER_GROUP] %}
{{ hostvars[host]['ansible_hostname'] }}={{ ETCD_PEER_URL_SCHEME }}://{{ hostvars[host]['ansible_default_ipv4']['address'] }}:{{ ETCD_PEER_PORT }}
